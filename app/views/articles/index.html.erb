<h1>List of All Articles</h1>

<p>
  <%= link_to "Create new article", new_article_path %>
</p>

<table>
  <tr>
  	<th> Title </th>
    <th> Description </th>
  </tr>
  <% @article.each do |ar| %>
    <tr>
      <td> <%= ar.title %> </td>
  	  <td> <%= ar.description[0..50] %> </td>
  	  <td> <%= link_to 'Edit', edit_article_path(ar) %> </td>
  	  <td> <%= link_to 'Show', article_path(ar) %> </td>
  	  <td> <%= link_to 'Delete', article_path(ar), method: :delete, data: {confirm: "Are you sure?"} %> </td>
    </tr>
  <% end %>
</table>


